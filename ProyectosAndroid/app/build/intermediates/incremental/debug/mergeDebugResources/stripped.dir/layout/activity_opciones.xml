<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#20001D"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Opciones">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".OpcionesActivity"
        tools:layout_editor_absoluteY="0dp">

        <Switch
            android:id="@+id/switchMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Desactivar música de fondo"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSelectMusic"
            android:layout_width="148dp"
            android:layout_height="51dp"
            android:layout_below="@id/switchMusic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#20001D"
            android:text="Seleccionar Música"
            app:cornerRadius="0dp"
            app:strokeColor="#FFB800"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="148dp"
            android:layout_height="51dp"
            android:layout_below="@+id/btnSelectMusic"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="368dp"
            android:layout_marginEnd="127dp"
            android:backgroundTint="#20001D"
            android:text="Volver"
            app:cornerRadius="0dp"
            app:strokeColor="#FFB800"
            app:strokeWidth="2dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>